# AgreemShield AI Backend Configuration

# Database
DATABASE_URL=sqlite:///./agreemshield.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/agreemshield

# File Uploads
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# ML Models
MODEL_PATH=./trained_models/risk_classifier.pkl
SPACY_MODEL=en_core_web_sm

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS (Frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# OCR (Optional - for scanned PDFs)
TESSERACT_CMD=tesseract
# Windows example: C:\\Program Files\\Tesseract-OCR\\tesseract.exe

# Logging
LOG_LEVEL=INFO

# Security (for production)
# API_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here
